<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<!-- ============================================================
This file is placed on the prod server under jetty.home/contexts/
================================================================= -->

<Configure class="org.eclipse.jetty.webapp.WebAppContext">
  <Set name="contextPath">/</Set>
  <Set name="war"><SystemProperty name="jetty.home"/>/webapps/literacyapp.war</Set>
  <Call name="setAttribute">
    <Arg>env</Arg>
    <Arg>PROD</Arg>
  </Call>
  <Call name="setAttribute">
    <Arg>jdbc_password</Arg>
    <Arg>************</Arg>
  </Call>
  <Call name="setAttribute">
    <Arg>google_api_secret</Arg>
    <Arg>************</Arg>
  </Call>
  <Call name="setAttribute">
    <Arg>facebook_api_secret</Arg>
    <Arg>************</Arg>
  </Call>
  <Call name="setAttribute">
    <Arg>github_api_secret</Arg>
    <Arg>************</Arg>
  </Call>
  <Call name="setAttribute">
    <Arg>mailchimp_api_key</Arg>
    <Arg>************</Arg>
  </Call>
  <Call name="setAttribute">
    <Arg>slack_api_token</Arg>
    <Arg>************</Arg>
  </Call>
  <Call name="setAttribute">
    <Arg>appstore_secret</Arg>
    <Arg>************</Arg>
  </Call>
  <Set name="virtualHosts">
    <Array type="java.lang.String">
      <Item>literacyapp.org</Item>
      <Item>ar.literacyapp.org</Item>
      <Item>en.literacyapp.org</Item>
      <Item>es.literacyapp.org</Item>
      <Item>sw.literacyapp.org</Item>
    </Array>
  </Set>
  <Set name="maxFormContentSize">104857600</Set><!-- 100MB -->
</Configure>
