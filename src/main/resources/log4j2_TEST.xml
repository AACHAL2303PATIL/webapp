<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <ThresholdFilter level="INFO" />
 
    <Appenders>
        <Routing name="routing">
            <Routes>
                <Route>
                    <RollingFile name="rollingfile" 
                                 fileName="${sys:user.home}/.elimu-ai/lang-${content_language}/logs/webapp.log" 
                                 filePattern="${sys:user.home}/.elimu-ai/lang-${content_language}/logs/webapp.log.%d">
                        <PatternLayout>
                            <pattern>[TEST][${web:attr.content_language}][${contextPath}][${contextPathName}][${rootDir}][${servletContextName}] %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
                        </PatternLayout>
                        <TimeBasedTriggeringPolicy />
                    </RollingFile>
                </Route>
            </Routes>
        </Routing>
    </Appenders>
  
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="routing"/>
        </Root>
    </Loggers> 
</Configuration>
